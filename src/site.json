{
  "identity": {
    "author": "S.H.E.V.K.Y.",
    "email": "hello@shevky.dev",
    "url": "https://shevky.github.io/",
    "themeColor": "#2f8f5b",
    "social": {
      "rss": false,
      "github": "https://github.com/shevky",
      "linkedin": "https://www.linkedin.com/in/fatihtatoglu"
    }
  },
  "seo": {
    "defaultImage": "https://images.unsplash.com/photo-1518770660439-4636190af475?auto=format&fit=crop&w=1600&q=80",
    "includeCollections": false,
    "includePaging": false
  },
  "analytics": {
    "enabled": false,
    "gtmId": "",
    "gaId": "",
    "clarityId": ""
  },
  "features": {
    "postOperations": {
      "enabled": false,
      "like": false,
      "dislike": false,
      "comment": false,
      "share": {
        "enabled": false,
        "whatsapp": false,
        "x": false,
        "linkedin": false,
        "facebook": false,
        "copy": false
      }
    },
    "search": false
  },
  "markdown": {
    "highlight": true
  },
  "content": {
    "pagination": {
      "pageSize": 6,
      "segment": {
        "tr": "sayfa",
        "en": "page"
      }
    },
    "languages": {
      "default": "tr",
      "supported": ["tr", "en"],
      "canonical": {
        "tr": "/",
        "en": "/en/"
      }
    },
    "collections": {}
  },
  "build": {
    "minify": false,
    "debug": true
  },
  "robots": {
    "allow": ["/"],
    "disallow": ["assets/"]
  },
  "plugins": [
    "@shevky/plugin-robots-txt",
    "@shevky/plugin-tailwindcss",
    "@shevky/plugin-esbuild",
    "@shevky/plugin-rss",
    "@shevky/plugin-sitemap"
  ]
}
