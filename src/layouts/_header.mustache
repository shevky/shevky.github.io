<header class="mx-auto w-full max-w-[1280px] px-6 md:px-10 py-6 flex flex-wrap items-center justify-between gap-4 relative">
  <div class="flex items-center gap-3">
    <a href="{{{site.home}}}" class="brand-link">
      <img class="brand-mark" src="/assets/images/shevky-mascot.jpeg" alt="S.H.E.V.K.Y. logo" />
      <span class="text-xl font-semibold tracking-tight">{{site.title}}</span>
    </a>
    <span class="hidden md:inline text-xs uppercase tracking-[0.3em] text-muted">
      {{site.role}}
    </span>
  </div>

  <div class="flex items-center gap-2">
    <button type="button" data-lang-toggle class="btn-ghost" aria-label="{{i18n.header.actions.language}}">
      {{i18n.header.actions.languageShort}}
    </button>
    <button type="button" data-theme-toggle class="btn-ghost" aria-label="{{i18n.header.actions.theme}}">
      <span class="sr-only">{{i18n.header.actions.theme}}</span>
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <circle cx="12" cy="12" r="4"></circle>
        <path d="M12 2v2"></path>
        <path d="M12 20v2"></path>
        <path d="M4.93 4.93l1.41 1.41"></path>
        <path d="M17.66 17.66l1.41 1.41"></path>
        <path d="M2 12h2"></path>
        <path d="M20 12h2"></path>
        <path d="M4.93 19.07l1.41-1.41"></path>
        <path d="M17.66 6.34l1.41-1.41"></path>
      </svg>
    </button>
  </div>
</header>
